{% comment %} {% comment %}
A modern, step-by-step bundle product form with smooth UX
- Start with minimum items, add more with elegant buttons
- Clean, minimalist design with smooth animations
- Progressive disclosure instead of overwhelming options
{% endcomment %}

{%- assign product_form_id = 'product-form-' | append: section.id -%}

{%- assign bundle_products = product.metafields.design.your_own.value -%}
<script type="application/json" id="bundle-products-{{ section.id }}">
{
  "products": [
    {%- for ref_product in bundle_products -%}
      {%- if forloop.first != true -%},{%- endif -%}
      {
        "id": {{ ref_product.id | json }},
        "handle": {{ ref_product.handle | json }},
        "title": {{ ref_product.title | json }},
        "hasVariants": {% if ref_product.variants.size > 1 %}true{% else %}false{% endif %},
        "image": {% if ref_product.featured_image %}{{ ref_product.featured_image | image_url: width: 100 | json }}{% else %}""{% endif %},
        "imageHigh": {% if ref_product.featured_image %}{{ ref_product.featured_image | image_url: width: 500 | json }}{% else %}""{% endif %},
        "variants": [
          {%- for variant in ref_product.variants -%}
            {%- if forloop.first != true -%},{%- endif -%}
            {
              "id": {{ variant.id | json }},
              "title": {{ variant.title | json }},
              "price": {{ variant.price | json }},
              "available": {{ variant.available | json }},
              "image": {% if variant.featured_image %}{{ variant.featured_image | image_url: width: 100 | json }}{% elsif ref_product.featured_image %}{{ ref_product.featured_image | image_url: width: 100 | json }}{% else %}""{% endif %},
              "imageHigh": {% if variant.featured_image %}{{ variant.featured_image | image_url: width: 500 | json }}{% elsif ref_product.featured_image %}{{ ref_product.featured_image | image_url: width: 500 | json }}{% else %}""{% endif %}
            }
          {%- endfor -%}
        ]
      }
    {%- endfor -%}
  ]
}
</script>

<div class="modern-bundle-form" data-product-handle="{{ product.handle }}" data-bundle-products-id="bundle-products-{{ section.id }}"
  data-min-size="{{ section.settings.min_bundle_size | default: 3 }}"
  data-max-size="{{ section.settings.max_bundle_size | default: 10 }}">
  {%- form 'product', product, id: product_form_id, class: 'bundle-form', novalidate: 'novalidate', data-type:
  'add-to-cart-form' -%}
  <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">

  <!-- Header with dynamic pricing -->
  <div class="bundle-header">
    <div class="bundle-title">
      <h2>Create Your Bundle</h2>
      <p class="bundle-subtitle">Select your favorite items to build the perfect bundle</p>
    </div>
    <div class="bundle-price">
      <span class="total-amount" data-total>$0.00</span>
      <span class="items-count" data-count>0 items</span>
    </div>
  </div>

  <!-- Selected Items Grid -->
  <div class="selected-items" data-selected-items>
    <!-- Items will be dynamically added here -->
  </div>

  <!-- Add Item Section -->
  <div class="add-item-section" data-add-section>
    <button type="button" class="add-item-btn" data-add-btn>
      <svg class="add-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="12" y1="8" x2="12" y2="16"></line>
        <line x1="8" y1="12" x2="16" y2="12"></line>
      </svg>
      Add Item to Bundle
    </button>
  </div>

  <!-- Product Selector Modal -->
  <div class="product-selector" data-selector hidden>
    <div class="selector-header">
      <h3>Choose an Item</h3>
      <button type="button" class="close-selector" data-close-selector>
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <!-- Variant Selector Modal -->
    <div class="variant-selector" data-variant-selector hidden>
      <div class="variant-selector-content">
        <div class="variant-header">
          <h4>Select Variant</h4>
          <button type="button" class="close-variant-selector" data-close-variant-selector>
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
        </div>
        <div class="variant-product-info">
          <img src="" alt="" class="variant-product-image" data-variant-image width="80" height="80">
          <div class="variant-product-details">
            <h5 data-variant-product-title></h5>
            <div class="variant-options" data-variant-options></div>
          </div>
        </div>
        <button type="button" class="add-variant-btn" data-add-variant disabled>
          Add to Bundle
        </button>
      </div>
    </div>

    <div class="selector-grid" data-selector-grid>
      <!-- Products will be loaded here -->
    </div>
    <button type="button" class="load-more-btn" data-load-more hidden>
      Load More Items
    </button>
  </div>

  <!-- Bundle Actions -->
  <div class="bundle-actions">
    <div class="quantity-section">
      <label for="bundle-quantity">Bundle Quantity</label>
      <div class="quantity-controls">
        <button type="button" class="qty-btn" data-qty-decrease>-</button>
        <input type="number" id="bundle-quantity" name="quantity" value="1" min="1" data-quantity readonly>
        <button type="button" class="qty-btn" data-qty-increase>+</button>
      </div>
    </div>

    <button type="submit" class="add-to-cart-btn" data-submit disabled>
      <span data-submit-text>Add Bundle to Cart</span>
      <div class="btn-loader" hidden>
        <div class="spinner"></div>
      </div>
    </button>
  </div>

  <!-- Hidden Configuration -->
  <input type="hidden" name="attributes[bundle_items]" data-bundle-config>
  {%- endform -%}
</div>

