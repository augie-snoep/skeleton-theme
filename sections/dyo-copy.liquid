<script>
  class ModernBundleForm {
    constructor(container) {
      if (!container) throw new Error('Container element is required');
      
      this.container = container;
      this.productHandle = container.dataset.productHandle;
      this.minSize = parseInt(container.dataset.minSize);
      this.maxSize = parseInt(container.dataset.maxSize);

      // Initialize all DOM elements
      this.initializeElements();

      // Initialize state
      this.selectedItems = [];
      this.allProducts = [];
      this.filteredProducts = [];
      this.currentPage = 0;
      this.productsPerPage = 24;

      this.init();
    }

    initializeElements() {
      // Main elements
      this.form = this.container.querySelector('.bundle-form');
      this.selectedItemsContainer = this.container.querySelector('[data-selected-items]');
      this.addBtn = this.container.querySelector('[data-add-btn]');
      
      // Product selector elements
      this.selector = this.container.querySelector('[data-selector]');
      this.selectorGrid = this.container.querySelector('[data-selector-grid]');
      this.closeSelectorBtn = this.container.querySelector('[data-close-selector]');
      this.loadMoreBtn = this.container.querySelector('[data-load-more]');
      
      // Variant selector elements
      this.variantSelector = this.container.querySelector('[data-variant-selector]');
      this.variantSelectorContent = this.container.querySelector('.variant-selector-content');
      this.closeVariantBtn = this.container.querySelector('[data-close-variant-selector]');
      this.addVariantBtn = this.container.querySelector('[data-add-variant]');
      this.variantImage = this.container.querySelector('[data-variant-image]');
      this.variantProductTitle = this.container.querySelector('[data-variant-product-title]');
      this.variantOptions = this.container.querySelector('[data-variant-options]');
      
      // Counter and price elements
      this.totalElement = this.container.querySelector('[data-total]');
      this.countElement = this.container.querySelector('[data-count]');
      this.quantityInput = this.container.querySelector('[data-quantity]');
      this.qtyDecrease = this.container.querySelector('[data-qty-decrease]');
      this.qtyIncrease = this.container.querySelector('[data-qty-increase]');
      
      // Submit elements
      this.submitBtn = this.container.querySelector('[data-submit]');
      this.submitText = this.container.querySelector('[data-submit-text]');
      this.bundleConfig = this.container.querySelector('[data-bundle-config]');
    }

    async init() {
      await this.loadProducts();
      this.setupEventListeners();
      this.updateDisplay();

      // Start with minimum items
      for (let i = 0; i < this.minSize; i++) {
        this.addEmptySlot();
      }
    }

    async loadProducts() {
      try {
        const bundleProductsId = this.container.dataset.bundleProductsId;
        if (!bundleProductsId) return;

        const scriptElement = document.getElementById(bundleProductsId);
        if (!scriptElement) return;

        const data = JSON.parse(scriptElement.textContent);
        this.allProducts = data.products || [];
        this.filteredProducts = [...this.allProducts];
      } catch (error) {
        console.error('Error loading products:', error);
      }
    }

    setupEventListeners() {
      // Add item button and empty slots
      this.addBtn.addEventListener('click', () => this.openSelector());
      this.selectedItemsContainer.addEventListener('click', (e) => {
        const emptySlot = e.target.closest('.empty-slot');
        if (emptySlot) {
          this.openSelector();
        }
      });

      // Selector close
      this.closeSelectorBtn.addEventListener('click', () => this.closeSelector());
      this.selector.addEventListener('click', (e) => {
        if (e.target === this.selector) this.closeSelector();
      });



      // Load more
      this.loadMoreBtn.addEventListener('click', () => this.loadMore());

      // Product selection and deselection
      this.selectorGrid?.addEventListener('click', (e) => {
        const item = e.target.closest('.selector-item');
        if (!item || item.classList.contains('unavailable')) return;

        const productId = parseInt(item.dataset.productId);
        const product = this.allProducts.find(p => p.id === productId);
        if (!product) return;
        
        if (item.classList.contains('selected')) {
          const variant = product.variants.find(v => 
            this.selectedItems.some(item => item && item.id === v.id)
          );
          if (variant) {
            this.deselectProduct(variant.id);
          }
        } else if (product.hasVariants) {
          this.openVariantSelector(product);
        } else {
          // For products without variants, use the first available variant
          const firstAvailableVariant = product.variants.find(v => v.available);
          if (firstAvailableVariant) {
            // If this is the only variant or it's the default variant, just use the product title
            const isDefaultVariant = product.variants.length === 1 || firstAvailableVariant.title.toLowerCase().includes('default');
            const displayTitle = isDefaultVariant ? product.title : `${product.title} - ${firstAvailableVariant.title}`;
            
            const emptyIndex = this.selectedItems.findIndex(item => item === null);
            if (emptyIndex !== -1) {
              this.selectedItems[emptyIndex] = { 
                ...firstAvailableVariant, 
                productTitle: product.title,
                displayTitle: displayTitle
              };
            } else if (this.selectedItems.length < this.maxSize) {
              this.selectedItems.push({ 
                ...firstAvailableVariant, 
                productTitle: product.title,
                displayTitle: displayTitle
              });
            }
            this.updateDisplay();
            this.updateSelectorHighlights();
          }
        }
      });

      // Variant selector events
      this.closeVariantBtn?.addEventListener('click', () => {
        this.closeVariantSelector();
        this.closeSelector();
      });

      this.variantSelector?.addEventListener('click', (e) => {
        if (e.target === this.variantSelector) {
          this.closeVariantSelector();
          this.closeSelector();
        }
      });

      this.addVariantBtn?.addEventListener('click', () => {
        const selectedVariantId = parseInt(this.addVariantBtn.dataset.variantId);
        if (!selectedVariantId) return;

        const product = this.allProducts.find(p => 
          p.variants.some(v => v.id === selectedVariantId)
        );
        
        if (!product) return;

                  const variant = product.variants.find(v => v.id === selectedVariantId);
          if (!variant || !variant.available) return;

          // If this is the only variant or it's the default variant, just use the product title
          const isDefaultVariant = product.variants.length === 1 || variant.title.toLowerCase().includes('default');
          const displayTitle = isDefaultVariant ? product.title : `${product.title} - ${variant.title}`;

          // Find first empty slot or add new one
          const emptyIndex = this.selectedItems.findIndex(item => item === null);
          if (emptyIndex !== -1) {
            this.selectedItems[emptyIndex] = { 
              ...variant, 
              productTitle: product.title,
              displayTitle: displayTitle
            };
          } else if (this.selectedItems.length < this.maxSize) {
            this.selectedItems.push({ 
              ...variant, 
              productTitle: product.title,
              displayTitle: displayTitle
            });
        }

        this.updateDisplay();
        this.closeVariantSelector();
        this.closeSelector();
      });

      // Remove items and handle quantity changes
      this.selectedItemsContainer.addEventListener('click', (e) => {
        const target = e.target;
        const index = parseInt(target.dataset.index);

        if (target.closest('.remove-item')) {
          const removeIndex = parseInt(target.closest('.selected-item').dataset.index);
          this.removeItem(removeIndex);
        } else if (target.matches('[data-decrease-qty]') && !isNaN(index)) {
          this.updateItemQuantity(index, -1);
        } else if (target.matches('[data-increase-qty]') && !isNaN(index)) {
          this.updateItemQuantity(index, 1);
        }
      });

      // Quantity controls
      this.qtyDecrease.addEventListener('click', () => {
        const current = parseInt(this.quantityInput.value);
        if (current > 1) {
          this.quantityInput.value = current - 1;
          this.updateTotal();
        }
      });

      this.qtyIncrease.addEventListener('click', () => {
        const current = parseInt(this.quantityInput.value);
        this.quantityInput.value = current + 1;
        this.updateTotal();
      });

      this.quantityInput.addEventListener('change', () => this.updateTotal());

      // Form submission
      this.form.addEventListener('submit', (e) => this.handleSubmit(e));
    }

    addEmptySlot() {
      this.selectedItems.push(null);
      this.updateDisplay();
    }

    openSelector() {
      this.selector.removeAttribute('hidden');
      this.renderSelectorProducts();
      setTimeout(() => this.selector.classList.add('show'), 10);
      document.body.style.overflow = 'hidden';
    }

    closeSelector() {
      this.selector.classList.remove('show');
      setTimeout(() => {
        this.selector.setAttribute('hidden', '');
        document.body.style.overflow = '';
      }, 300);
    }



    renderSelectorProducts(append = false) {
      const start = append ? this.currentPage * this.productsPerPage : 0;
      const end = (this.currentPage + 1) * this.productsPerPage;
      const products = this.filteredProducts.slice(start, end);

      // Get list of selected variant IDs and product IDs
      const selectedVariantIds = this.selectedItems
        .filter(item => item !== null)
        .map(item => item.id);
      
      const selectedProductIds = this.selectedItems
        .filter(item => item !== null)
        .map(item => {
          const product = this.allProducts.find(p => 
            p.variants.some(v => v.id === item.id)
          );
          return product ? product.id : null;
        })
        .filter(id => id !== null);

      const productsHtml = products.map(product => {
        const hasAvailableVariants = product.variants.some(v => v.available);
        const firstAvailableVariant = product.variants.find(v => v.available) || product.variants[0];
        const isSelected = selectedProductIds.includes(product.id);
        
        return `
          <div class="selector-item ${!hasAvailableVariants ? 'unavailable' : ''} ${isSelected ? 'selected' : ''}" 
               data-product-id="${product.id}">
            <div class="image-container">
              <img src="${product.imageHigh || product.image}" alt="${product.title}" loading="lazy">
            </div>
            <h4>${product.title}</h4>
            <div class="price">${this.formatMoney(firstAvailableVariant.price)}</div>
            ${!hasAvailableVariants ? '<div class="unavailable-badge">Sold Out</div>' : ''}
            ${isSelected ? '<div class="selected-badge">✓ Selected</div>' : ''}
            ${product.hasVariants ? '<div class="variants-badge">Multiple Options</div>' : ''}
          </div>
        `;
      }).join('');

      if (append) {
        this.selectorGrid.insertAdjacentHTML('beforeend', productsHtml);
      } else {
        this.selectorGrid.innerHTML = productsHtml;
      }

      // Show/hide load more button
      const hasMore = end < this.filteredProducts.length;
      this.loadMoreBtn.classList.toggle('hidden', !hasMore);

      // Update load more button text with remaining count
      if (hasMore) {
        const remaining = this.filteredProducts.length - end;
        this.loadMoreBtn.textContent = `Load ${Math.min(remaining, this.productsPerPage)} More Items (${remaining} remaining)`;
      }
    }

    loadMore() {
      this.currentPage++;
      this.renderSelectorProducts(true); // Append new products instead of replacing
    }

    selectProduct(variantId) {
      const product = this.allProducts.find(p => p.variantId === variantId);
      if (!product) return;

      // Find first empty slot
      const emptyIndex = this.selectedItems.findIndex(item => item === null);
      if (emptyIndex !== -1) {
        this.selectedItems[emptyIndex] = { ...product };
      } else if (this.selectedItems.length < this.maxSize) {
        // Add new slot if under max
        this.selectedItems.push({ ...product });
      }

      this.updateDisplay();
      this.updateSelectorHighlights(); // Update selected items in modal
    }

    removeItem(index) {
      // Don't remove if we're at minimum and this isn't an empty slot
      if (this.getFilledCount() <= this.minSize && this.selectedItems[index] !== null) {
        return;
      }

      this.selectedItems.splice(index, 1);

      // Ensure we never go below minimum slots
      while (this.selectedItems.length < this.minSize) {
        this.selectedItems.push(null);
      }

      this.updateDisplay();
    }

    getFilledCount() {
      return this.selectedItems.filter(item => item !== null).length;
    }

    updateDisplay() {
      this.renderSelectedItems();
      this.updateTotal();
      this.updateSubmitButton();
      this.updateAddButton();
    }

    renderSelectedItems() {
      this.selectedItemsContainer.innerHTML = this.selectedItems.map((item, index) => {
        if (item === null) {
          return `
          <div class="selected-item empty-slot" data-index="${index}">
            <div class="empty-placeholder">
              <div class="placeholder-icon">+</div>
              <div class="placeholder-text">Choose an item</div>
            </div>
          </div>
        `;
        }

        return `
        <div class="selected-item filled-slot" data-index="${index}">
          <button type="button" class="remove-item" title="Remove item">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
          </button>
          <img src="${item.imageHigh}" alt="${item.title}" class="item-image">
          <div class="item-details">
            <h4>${item.displayTitle || item.title}</h4>
            <div class="item-price">${this.formatMoney(item.price)}</div>
            <div class="item-quantity">
              <button type="button" class="qty-btn" data-decrease-qty data-index="${index}">-</button>
              <input type="number" value="${item.quantity || 1}" min="1" readonly data-item-qty data-index="${index}">
              <button type="button" class="qty-btn" data-increase-qty data-index="${index}">+</button>
            </div>
          </div>
        </div>
      `;
      }).join('');
    }

    updateTotal() {
      const bundleTotal = this.selectedItems.reduce((total, item) => {
        return total + (item ? item.price : 0);
      }, 0);

      const quantity = parseInt(this.quantityInput.value);
      const finalTotal = bundleTotal * quantity;

      this.totalElement.textContent = this.formatMoney(finalTotal);

      const filledCount = this.getFilledCount();
      this.countElement.textContent = `${filledCount} item${filledCount !== 1 ? 's' : ''}`;
    }

    updateSubmitButton() {
      const filledCount = this.getFilledCount();
      const hasEmptySlots = this.selectedItems.some(item => item === null);

      if (hasEmptySlots) {
        this.submitBtn.disabled = true;
        this.submitText.textContent = `Choose ${this.selectedItems.length - filledCount} more item${this.selectedItems.length - filledCount !== 1 ? 's' : ''}`;
      } else {
        this.submitBtn.disabled = false;
        this.submitText.textContent = 'Add Bundle to Cart';
      }
    }

    updateAddButton() {
      if (this.selectedItems.length >= this.maxSize) {
        this.addBtn.style.display = 'none';
      } else {
        this.addBtn.style.display = 'flex';
        const emptySlots = this.selectedItems.filter(item => item === null).length;
        if (emptySlots > 0) {
          this.addBtn.textContent = 'Choose Items';
        } else {
          this.addBtn.innerHTML = `
          <svg class="add-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <circle cx="12" cy="12" r="10"></circle>
            <line x1="12" y1="8" x2="12" y2="16"></line>
            <line x1="8" y1="12" x2="16" y2="12"></line>
          </svg>
          Add Another Item
        `;
        }
      }
    }

    async handleSubmit(e) {
      e.preventDefault();

      const filledItems = this.selectedItems.filter(item => item !== null);
      if (filledItems.length < this.minSize) {
        alert(`Please select at least ${this.minSize} items.`);
        return;
      }

      // Show loading state
      this.submitBtn.disabled = true;
      this.submitText.style.opacity = '0';
      this.submitBtn.querySelector('.btn-loader').hidden = false;

      try {
        const quantity = parseInt(this.quantityInput.value) || 1;
        const bundleId = Date.now().toString();

        const bundleItems = filledItems.map(item => ({
          id: item.id,
          quantity: (item.quantity || 1) * quantity,
          properties: {
            '_time': bundleId,
            '_bundle': 'true',
            '_product': item.productTitle || '',
            '_variant': item.title || '',
            '_item_quantity': item.quantity || 1,
            '_bundle_quantity': quantity
          }
        }));

        // Update bundle config
        this.bundleConfig.value = JSON.stringify(filledItems.map(item => ({
          id: item.id,
          title: item.title,
          productTitle: item.productTitle,
          quantity: quantity,
          price: item.price
        })));

        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({ items: bundleItems })
        });

        if (!response.ok) {
          const errorData = await response.json();
          throw new Error(errorData.message || 'Failed to add bundle to cart');
        }

        // Success - redirect to cart
        window.location.href = '/cart';

      } catch (error) {
        console.error('Error adding bundle to cart:', error);
        alert('There was an error adding the bundle to cart. Please try again.');

        // Reset loading state
        this.submitBtn.disabled = false;
        this.submitText.style.opacity = '1';
        this.submitBtn.querySelector('.btn-loader').hidden = true;
      }
    }

    formatMoney(cents) {
      return (cents / 100).toLocaleString('en-US', {
        style: 'currency',
        currency: 'USD'
      });
    }

    updateSelectorHighlights() {
      // Re-render the selector products to update highlights
      this.renderSelectorProducts();
    }

    updateItemQuantity(index, change) {
      if (index < 0 || index >= this.selectedItems.length) return;
      
      const item = this.selectedItems[index];
      if (!item) return;

      const newQuantity = (item.quantity || 1) + change;
      if (newQuantity < 1) return;

      this.selectedItems[index] = {
        ...item,
        quantity: newQuantity
      };

      this.updateDisplay();
    }

    openVariantSelector(product) {
      if (!product || !this.variantSelector) return;

      // Update variant selector content
      if (product.imageHigh) {
        this.variantImage.src = product.imageHigh;
        this.variantImage.alt = product.title;
      } else {
        this.variantImage.style.display = 'none';
      }
      
      this.variantProductTitle.textContent = product.title;

      // Create variant options
      const selectedVariantIds = this.selectedItems
        .filter(item => item !== null)
        .map(item => item.id);

      const variantsHtml = product.variants.map(variant => {
        const isSelected = selectedVariantIds.includes(variant.id);
        return `
          <div class="variant-option ${!variant.available ? 'unavailable' : ''} ${isSelected ? 'selected' : ''}" 
               data-variant-id="${variant.id}">
            <div class="variant-option-content">
              ${variant.image ? `
                <img src="${variant.image}" alt="${variant.title}" class="variant-option-image" width="50" height="50">
              ` : ''}
              <div class="variant-option-details">
                <span class="variant-title">${variant.title}</span>
                <span class="variant-price">${this.formatMoney(variant.price)}</span>
              </div>
            </div>
            ${!variant.available ? '<div class="variant-unavailable">Sold Out</div>' : ''}
            ${isSelected ? '<div class="variant-selected">✓ In Bundle</div>' : ''}
          </div>
        `;
      }).join('');

      this.variantOptions.innerHTML = variantsHtml;

      // Add click handlers for variant options
      this.variantOptions.querySelectorAll('.variant-option').forEach(option => {
        if (!option.classList.contains('unavailable')) {
          option.addEventListener('click', () => {
            // Remove selected class from all options
            this.variantOptions.querySelectorAll('.variant-option').forEach(opt => 
              opt.classList.remove('selected'));
            
            // Add selected class to clicked option
            option.classList.add('selected');
            
            // Enable add button and store variant ID
            this.addVariantBtn.disabled = false;
            this.addVariantBtn.dataset.variantId = option.dataset.variantId;
          });
        }
      });

      // Show variant selector
      this.variantSelector.style.display = 'flex';
      this.variantSelector.removeAttribute('hidden');
      requestAnimationFrame(() => this.variantSelector.classList.add('show'));
    }

    closeVariantSelector() {
      if (!this.variantSelector) return;
      
      this.variantSelector.classList.remove('show');
      setTimeout(() => {
        this.variantSelector.setAttribute('hidden', '');
        this.variantSelector.style.display = 'none';
        // Reset state
        if (this.addVariantBtn) {
          this.addVariantBtn.disabled = true;
          delete this.addVariantBtn.dataset.variantId;
        }
        if (this.variantOptions) {
          this.variantOptions.innerHTML = '';
        }
        if (this.variantImage) {
          this.variantImage.style.display = '';
          this.variantImage.src = '';
        }
      }, 300);
    }

    deselectProduct(variantId) {
      // Don't allow deselection if it would put us below minimum size
      const currentCount = this.getFilledCount();
      if (currentCount <= this.minSize) {
        // Show a gentle notification
        const notification = document.createElement('div');
        notification.className = 'deselect-notification';
        notification.textContent = `Minimum ${this.minSize} items required`;
        document.body.appendChild(notification);
        
        setTimeout(() => {
          notification.classList.add('show');
          setTimeout(() => {
            notification.classList.remove('show');
            setTimeout(() => notification.remove(), 300);
          }, 2000);
        }, 10);
        return;
      }

      // Find the index of the item with this variant ID
      const index = this.selectedItems.findIndex(item => item && item.variantId === variantId);
      if (index !== -1) {
        // If this is the last slot, remove it entirely
        if (index === this.selectedItems.length - 1) {
          this.selectedItems.pop();
        } else {
          // Otherwise, set it to null to maintain the slot
          this.selectedItems[index] = null;
        }
        this.updateDisplay();
        this.updateSelectorHighlights();
      }
    }
  }

  // Initialize when DOM is ready
  class BundleFormManager {
    static init() {
      const bundleForms = document.querySelectorAll('.modern-bundle-form');
      bundleForms.forEach(form => new ModernBundleForm(form));
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', BundleFormManager.init);
  } else {
    BundleFormManager.init();
  }

